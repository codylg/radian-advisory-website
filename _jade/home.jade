          p Key Areas:
          div.tag-list
            div.tag Technology Assessment
            div.tag Implementation Planning
            div.tag Process Improvement
            div.tag Technical Audits
      div.section-right-column
        div.card
          div.icon-and-header
            div.icon.icon-box
              svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true")
