    block viewport
      meta(name="viewport", content="initial-scale=1")

    meta(property="og:title", content="#{title}")
    meta(property="og:site_name", content="Radian Advisory")
    meta(property="og:description", content="#{description}")
    meta(property="og:type", content="website")
    meta(property="og:url", content="https://radianadvisory.com/#{slug}")
    meta(property="og:image", content="https://radianadvisory.com/#{card}")

    link(rel="icon", href="favicon.svg")
    link(rel="stylesheet", href="static/styles.css", async)

